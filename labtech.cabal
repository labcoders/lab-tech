    megaparsec >=5.0 && <5.1,
    uid >=0.1 && <0.2,
    transformers >=0.4 && <0.6,
    containers >=0.5 && <0.6,
    postgresql-simple >=0.5 && <0.6,
    async >=2.1 && <2.2,
    servant >=0.8 && <0.9,
    servant-server >=0.8 && <0.9,
    github >=0.15 && <0.16,
    wai >=3.2 && <3.3,
    warp >=3.2 && <3.3,
    Crypto >=4.2 && <4.3,
    base16-bytestring >=0.1 && <0.2,
    string-conversions >=0.4 && <0.5,
    servant-github-webhook >=0.3 && <0.4

  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:
    -Wall
    -fsimpl-tick-factor=200
