    base >=4.8 && <4.10,
    bytestring >= 0.10 && <0.11,
    connection >= 0.2 && <0.3,
    data-default-class >=0.1 && <0.2,
    directory >=1.2.5 && <1.3,
    filepath >=1.4 && <1.5,
